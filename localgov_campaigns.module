<?php

/**
 * @file
 * LocalGov Campaigns module file.
 */

use Drupal\localgov_campaigns\Campaign;
use Drupal\node\NodeInterface;

/**
 * Implements hook_theme().
 */
function localgov_campaigns_theme($existing, $type, $theme, $path) {
  return [
    'campaign_navigation' => [
      'variables' => [
        'menu_name' => '',
        'items' => [],
      ],
    ],
    'campaign_banner' => [
      'variables' => [
        'tag' => '',
        'heading' => '',
        'image' => '',
      ],
    ],
    'campaign_overview_banner' => [
      'variables' => [
        'heading' => '',
        'image' => '',
      ],
    ],
    'node__localgov_campaigns_page__full' => [
      'template' => 'node--localgov-campaigns-page--full',
      'base hook' => 'node',
    ],
  ];
}

/**
 * Implements hook_preprocess_page().
 *
 * Adds a class to the page wrapper with the name of the theme
 * if the current node is within a campaign.
 */
function localgov_campaigns_preprocess_page(&$variables) {
  $node = \Drupal::routeMatch()->getParameter('node');

  if (!$node instanceof NodeInterface) {
    return;
  }

  if (in_array($node->bundle(), [
    'localgov_campaigns_overview',
    'localgov_campaigns_page'
  ])) {
    $campaign = \Drupal::service('class_resolver')
      ->getInstanceFromDefinition(Campaign::class)
      ->getCampaign($node);

    if ($campaign instanceof NodeInterface && $theme = $campaign->localgov_campaigns_theme->value) {
      $variables['attributes']['class'][] = str_replace('_', '--', $theme);
    }
  }
}
